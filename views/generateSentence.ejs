<!DOCTYPE html>
<html>

<head>
</head>

<link rel="stylesheet" href="app.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<body style="background-color:powderblue">
    <h1>Random Sentence Generator</h1>
    <p>Press the button to generate a random sentence</p>

    <form action="/generateSentence/generateSentence" method="post">
        <button type="submit" class="btn btn-primary btn-block">Generate Sentence</button>
    </form>

    <form action="/generateSentence/deleteSentence" method="post">
        <button type="submit" class="btn btn-primary btn-block">Delete all values</button>
    </form>

    <form action="/goBack" method="get">
        <button type="submit" class="btn btn-primary btn-block">Go back</button>
    </form>

    <% sentenceData.forEach(function(sentence) { %>
        <table>
            <tr>
                <td><br>
                    <%= sentence.sentence %>
                </td>
            </tr>

        </table>
        <% }) %>
</body>

<style>
    h1 {
        color: #003366;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-weight: bold;
        font-size: 300%;
        text-align: center;
    }

    p {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 125%;
        text-align: center;
    }

    body {
        background-color: powderblue;
        text-align: center;
    }

    table {
        border-collapse: collapse;
        text-align: justify;
        font-family: Verdana, sans-serif;      
    }

    button {
        margin: 0 auto;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }
</style>

</html>