<!DOCTYPE html>
<html>

<head>
</head>

<link rel="stylesheet" href="app.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<body>
    <h1>Random Address Generator</h1>
    <p>Choose country to generate address</p>

    <table>
        <td>
            <form action="/generate" method="post">
                <button type="submit" class="btn btn-primary btn-block">Default</button>
            </form>
        </td>
        <td>
            <form action="/generateDE" method="post">
                <button type="submit" class="btn btn-primary btn-block">Germany</button>
            </form>
        </td>
        <td>
            <form action="/generateFR" method="post">
                <button type="submit" class="btn btn-primary btn-block">France</button>
            </form>
        </td>
        <td>
            <form action="/generateJA" method="post">
                <button type="submit" class="btn btn-primary btn-block">Japan</button>
            </form>
        </td>
        <td>
            <form action="/generatePL" method="post">
                <button type="submit" class="btn btn-primary btn-block">Poland</button>
            </form>
        </td>
        <td>
            <form action="/generateRU" method="post">
                <button type="submit" class="btn btn-primary btn-block">Russia</button>
            </form>
        </td>
        <td>
            <form action="/generateUK" method="post">
                <button type="submit" class="btn btn-primary btn-block">United Kingdom</button>
            </form>
        </td>
        <td>
            <form action="/generateUS" method="post">
                <button type="submit" class="btn btn-primary btn-block">United States</button>
            </form>
        </td>
    </table>

    <form action="/deleteAddress/deleteAll" method="post">
        <button type="submit" class="btn btn-primary btn-block">Delete all values</button>
    </form>

    <form action="/goBack" method="get">
        <button type="submit" class="btn btn-primary btn-block">Go back</button>
    </form>

    <% userData.forEach(function(user) { %>
        <table id="address" , cellpadding="5">
            <tr>
                <th>Full Name: </th>
                <td>
                    <%= user.firstName %>
                        <%= user.lastName %>
                </td>
            </tr>
            <tr>
                <th>Street: </th>
                <td>
                    <%= user.street %>
                </td>
            </tr>
            <tr>
                <th>City: </th>
                <td>
                    <%= user.city %>
                </td>
            </tr>
            <tr>
                <th>State: </th>
                <td>
                    <%= user.state %>
                </td>
            </tr>
            <tr>
                <th>Zip Code: </th>
                <td>
                    <%= user.zipCode %>
                </td>
            </tr>
            <tr>
                <th>Phone Number: </th>
                <td>
                    <%= user.phoneNumber %>
                </td>
            </tr>
            <tr>
                <th>Delete address</th>
                <td>
                    <form action="/deleteAddress/delete/<%=user._id%>" method="post">
                        <button id="delete" type="submit" class="btn btn-primary btn-block">Delete</button>
                    </form>
                </td>
            </tr>
        </table>
        <% }) %>
</body>

<style>
    h1 {
        color: #003366;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-weight: bold;
        font-size: 300%;
        text-align: center;
    }

    p {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 125%;
        text-align: center;
    }

    body {
        background-color: powderblue;
        text-align: center;
    }

    table {
        margin: 0 auto;
        text-align: justify;
        font-family: Verdana, sans-serif;
    }

    button {
        margin: 0 auto;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    #delete {
        margin-top: 17px;
    }

    #address {
        float: left;
        padding: 10px;
    }
</style>

</html>